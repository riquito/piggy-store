{
    "variables": {
        "version": "latest"
    },
    "builders": [
        {
            "type": "docker",
            "name": "piggy-store-base-image",
            "image": "alpine:3.5",
            "commit": true,
            "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"]
        },
        {
            "type": "docker",
            "name": "docker-piggy-store",
            "image": "riquito/piggy-store-base-image-alpine:latest",
            "commit": true,
            "pull": false,
            "changes": [
                "USER piggy-user",
                "WORKDIR /app",
                "ENTRYPOINT confd -confdir /app/configs -onetime -backend env && exec uwsgi -i /tmp/uwsgi.ini",
                "EXPOSE 5000"
            ],
            "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": "mkdir /app",
            "only": [
                "piggy-store-base-image"
            ]
        },
        {
            "type": "file",
            "source": "requirements.lock",
            "destination": "/app/requirements.lock",
            "only": [
                "piggy-store-base-image"
            ]
        },
        {
            "type": "file",
            "source": ".git/",
            "destination": "/app/.git",
            "only": [
                "docker-piggy-store"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "apk add --no-cache ca-certificates wget uwsgi-python3 git",
                "update-ca-certificates",
                "adduser piggy-user piggy-user -D",
                "# pip3 install --upgrade pip",
                "cd /app",
                "pip3 install -r requirements.lock",
                "wget https://github.com/kelseyhightower/confd/releases/download/v0.12.0-alpha3/confd-0.12.0-alpha3-linux-amd64 -O /usr/local/bin/confd",
                "chmod +x /usr/local/bin/confd",
                "apk del wget"
            ],
            "only": [
                "piggy-store-base-image"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "cd /app",
                "git reset --hard HEAD",
                "rm -fr /app/.git",
                "pip3 install -r requirements.lock",
                "chown -R piggy-user /app",
                "find /app -type d -print0 | xargs -0 chmod u+rwx"
            ],
            "only": [
                "docker-piggy-store"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "riquito/piggy-store-base-image-alpine",
            "tag": "{{ user `version` }}",
            "only": [
                "piggy-store-base-image"
            ]
        },
        {
            "type": "docker-tag",
            "repository": "riquito/piggy-store-alpine",
            "tag": "{{ user `version` }}",
            "only": [
                "docker-piggy-store"
            ]
        }
    ]
}